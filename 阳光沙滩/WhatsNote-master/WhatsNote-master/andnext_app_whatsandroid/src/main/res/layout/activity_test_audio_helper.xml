<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".TestAudioHelperActivity">

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="听筒" android:onClick="onReceiverClick"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="耳机" android:onClick="onHeadsetClick"
    android:visibility="gone"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="扬声器" android:onClick="onSpeakerClick"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:visibility="invisible"/>

    <Button android:id="@+id/btn_toggle_speaker"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="切换扬声器" android:onClick="onToggleSpeakerClick"/>

    <Button
            android:id="@+id/btn_toggle_mode"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="切换模式" android:onClick="onToggleModeClick"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content" android:visibility="invisible"/>

    <Button android:id="@+id/btn_headset"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="查询耳机状态" android:onClick="onDetectHeadsetClick"/>

    <TextView
            android:id="@+id/tv_noisy"
            android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center"
    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
</LinearLayout>